{
    "name": "soloterm/notify",
    "description": "A PHP package to send desktop notifications via OSC escape sequences in terminal applications.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Aaron Francis",
            "email": "aarondfrancis@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5|^11"
    },
    "autoload": {
        "psr-4": {
            "SoloTerm\\Notify\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SoloTerm\\Notify\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
